<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Theme Header (Yellow) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFD165"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/prompt_regular"
            android:text="Filters"
            android:textColor="#101114"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toTopOf="@id/bottom_action_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Interests Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Interests"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#101114"
                        android:fontFamily="@font/prompt_regular"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacing="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/chip_badminton_f"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_chip_inactive"
                                android:fontFamily="@font/prompt_regular"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="Badminton"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:id="@+id/chip_games_f"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_chip_inactive"
                                android:fontFamily="@font/prompt_regular"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="Games"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:id="@+id/chip_arts_f"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_chip_inactive"
                                android:fontFamily="@font/prompt_regular"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="Arts"
                                android:textColor="#424242"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Row 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/chip_learning_f"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_chip_inactive"
                                android:fontFamily="@font/prompt_regular"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:text="Learning"
                                android:textColor="#424242"
                                android:textSize="14sp"/>
                        </LinearLayout>

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Time Filter Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/time_filter_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time Range"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#101114"
                        android:fontFamily="@font/prompt_regular"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filter by start and optional end time"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:fontFamily="@font/prompt_regular"
                        android:layout_marginBottom="16dp"/>

                    <!-- Start Time Input -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Time"
                            android:textSize="12sp"
                            android:textColor="#424242"
                            android:fontFamily="@font/prompt_regular"
                            android:layout_marginBottom="4dp"
                            android:layout_marginStart="4dp"/>

                        <EditText
                            android:id="@+id/et_start_time"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_profile_input"
                            android:hint="Select Date and Time"
                            android:paddingHorizontal="16dp"
                            android:textColor="#101114"
                            android:textColorHint="#9E9E9E"
                            android:textSize="14sp"
                            android:fontFamily="@font/prompt_regular"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:drawableEnd="@drawable/calendar"
                            android:drawableTint="#FFD165"/>
                    </LinearLayout>

                    <!-- End Time Input -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End Time (Optional)"
                            android:textSize="12sp"
                            android:textColor="#424242"
                            android:fontFamily="@font/prompt_regular"
                            android:layout_marginBottom="4dp"
                            android:layout_marginStart="4dp"/>

                        <EditText
                            android:id="@+id/et_end_time"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_profile_input"
                            android:hint="Select Date and Time"
                            android:paddingHorizontal="16dp"
                            android:textColor="#101114"
                            android:textColorHint="#9E9E9E"
                            android:textSize="14sp"
                            android:fontFamily="@font/prompt_regular"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none"
                            android:drawableEnd="@drawable/calendar"
                            android:drawableTint="#FFD165"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="16dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Clear"
            android:textAllCaps="false"
            android:textColor="#101114"
            android:textSize="16sp"
            android:textStyle="bold"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:cornerRadius="16dp"
            android:fontFamily="@font/prompt_regular"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Apply"
            android:textColor="#101114"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#FFD165"
            app:cornerRadius="16dp"
            app:elevation="2dp"
            android:fontFamily="@font/prompt_regular"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>