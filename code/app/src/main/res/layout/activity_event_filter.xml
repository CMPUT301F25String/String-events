<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp" android:background="#FFFFFF">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:text="Select interests" android:textSize="16sp"
            android:textStyle="bold" android:textColor="#101114"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_marginTop="8dp">

            <TextView android:id="@+id/chip_badminton_f"
                android:layout_width="wrap_content" android:layout_height="28dp"
                android:paddingStart="12dp" android:paddingEnd="12dp"
                android:text="Badminton" android:gravity="center_vertical"
                android:textColor="#101114" android:background="@drawable/bg_chip_grey"/>

            <TextView android:id="@+id/chip_games_f"
                android:layout_width="wrap_content" android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:paddingStart="12dp" android:paddingEnd="12dp"
                android:text="Games" android:gravity="center_vertical"
                android:textColor="#101114" android:background="@drawable/bg_chip_grey"/>

            <TextView android:id="@+id/chip_arts_f"
                android:layout_width="wrap_content" android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:paddingStart="12dp" android:paddingEnd="12dp"
                android:text="Arts" android:gravity="center_vertical"
                android:textColor="#101114" android:background="@drawable/bg_chip_grey"/>

            <TextView android:id="@+id/chip_learning_f"
                android:layout_width="wrap_content" android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:paddingStart="12dp" android:paddingEnd="12dp"
                android:text="Learning" android:gravity="center_vertical"
                android:textColor="#101114" android:background="@drawable/bg_chip_grey"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp"
            android:background="#E6E8EB" android:layout_marginTop="16dp"/>

        <TextView android:text="Filter by time (End optional)" android:textSize="16sp"
            android:textStyle="bold" android:textColor="#101114"
            android:layout_marginTop="16dp" android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_start_time"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="Start time  (yyyy-MM-dd HH:mm)"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/et_end_time"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="End time (optional)"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:layout_marginTop="8dp"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="CLEAR"
                android:textAllCaps="true"
                android:textColor="#101114"
                android:background="@drawable/btn_clear_bg"/>

            <View android:layout_width="12dp" android:layout_height="1dp"/>

            <Button
                android:id="@+id/btn_apply"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="APPLY"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_apply_bg"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
