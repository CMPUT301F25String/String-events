<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-35dp"
        android:alpha="0.95"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ellipse_7" />

    <ImageView
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="-50dp"
        android:layout_marginBottom="-48dp"
        android:alpha="0.95"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ellipse_6" />


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/transparent"
        app:title="Sign In"
        app:titleCentered="true"
        app:titleTextColor="#222222"
        app:navigationIcon="@drawable/back_button"
        app:navigationIconTint="#9E9E9E" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                app:cardCornerRadius="28dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="28dp"
                    android:paddingBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Sign In As"
                        android:textColor="#7A7A7A"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnUser"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:minWidth="0dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="User"
                            android:textAllCaps="false"
                            android:textColor="#1E1E1E"
                            app:useMaterialThemeColors="false"
                            app:cornerRadius="8dp"
                            app:backgroundTint="#FFFFCC59" />

                        <Space android:layout_width="12dp" android:layout_height="1dp" />



                        <Space android:layout_width="12dp" android:layout_height="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAdmin"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:minWidth="0dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="Admin"
                            android:textAllCaps="false"
                            android:textColor="#1E1E1E"
                            app:useMaterialThemeColors="false"
                            app:cornerRadius="8dp"
                            app:backgroundTint="#FFFFCC59" />
                    </LinearLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="none">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email Address"
                            android:inputType="textEmailAddress"
                            android:textColor="#222222"
                            android:textColorHint="#9C9C9C"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:background="#BDBDBD"/>

                    <!-- Password -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="none">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:textColor="#222222"
                            android:textColorHint="#9C9C9C"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="20dp"
                        android:background="#BDBDBD"/>

                    <CheckBox
                        android:id="@+id/chkRemember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Remember me"
                        android:textColor="#7A7A7A"
                        android:textSize="12sp"/>

                    <FrameLayout
                        android:id="@+id/btnSignIn"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bottombar"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Sign In"
                            android:textColor="#1E1E1E"
                            android:textStyle="bold"/>
                    </FrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Don't have account?"
                            android:textColor="#9C9C9C"
                            android:textSize="12sp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSignUp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:padding="0dp"
                            android:text="Sign Up"
                            android:textAllCaps="false"
                            android:textColor="#222222"
                            app:useMaterialThemeColors="false"
                            android:background="@android:color/transparent"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
</FrameLayout>
