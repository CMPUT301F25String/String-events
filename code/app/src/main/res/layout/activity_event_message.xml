<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/back_button"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Message"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <!-- Section label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Message To:"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"/>

        <!-- Row of image buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btnWaitingUsers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/waitinglistusers"
                android:contentDescription="Waiting Users" />

            <ImageButton
                android:id="@+id/btnParticipatingUsers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/participatinguser"
                android:contentDescription="Participating Users" />

            <ImageButton
                android:id="@+id/btnCanceledUsers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/canceledusers"
                android:contentDescription="Canceled Users" />
        </LinearLayout>

        <!-- Message Content Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message Content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- Message input box -->
        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/messagebox"
            android:padding="16dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:gravity="top|start"
            android:hint="Type your message here" />

        <!-- Send Message Button -->
        <ImageButton
            android:id="@+id/btnSendMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/sendmessage"
            android:contentDescription="Send Message" />
    </LinearLayout>

</ScrollView>
