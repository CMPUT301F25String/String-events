<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:background="@android:color/transparent">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Events"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/prompt_regular"
            android:textColor="#101114"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Click an event to see details"
            android:textSize="16sp"
            android:fontFamily="@font/prompt_regular"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <!-- Logout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Logout"
            android:textColor="#D32F2F"
            android:textStyle="bold"
            android:fontFamily="@font/prompt_regular"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title" />

        <!-- Filters Section -->
        <LinearLayout
            android:id="@+id/layout_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle">

            <TextView
                android:id="@+id/label_filters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filters"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/prompt_regular"
                android:textColor="#101114"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/btn_open_filter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="+"
                android:textSize="20sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/tv_filter_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Showing filtered results"
                android:textSize="16sp"
                android:fontFamily="@font/prompt_regular"
                android:textColor="#757575"
                android:visibility="gone"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- List View with Spacing -->
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_container"
        android:layout_above="@id/bottomBar"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="16dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        tools:listitem="@layout/item_event" />

    <!-- Bottom Bar fixed to bottom -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:elevation="16dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/nav_calendar"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:src="@drawable/calendarorange"
            android:contentDescription="Home" />

        <ImageButton
            android:id="@+id/btnCamera"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:src="@drawable/camera"
            android:contentDescription="Camera" />

        <ImageButton
            android:id="@+id/nav_bell"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:src="@drawable/bellblack"
            android:contentDescription="Notifications" />

        <ImageButton
            android:id="@+id/nav_person"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:src="@drawable/profileblack"
            android:contentDescription="Profile" />
    </LinearLayout>

</RelativeLayout>
