<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/btn_open_filter"
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:text="+"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#101114"
            android:background="@drawable/bg_chip_grey"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/label_filters"
            app:layout_constraintTop_toTopOf="@id/label_filters" />

        <TextView
            android:id="@+id/tv_filter_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/btn_open_filter"
            app:layout_constraintTop_toTopOf="@id/btn_open_filter"
            app:layout_constraintBottom_toBottomOf="@id/btn_open_filter" />

        <View
            android:id="@+id/title_bg"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="#F2F2F2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Events"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/prompt_regular"
            android:textColor="#101114"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Click an event to see details"
            android:textSize="16sp"
            android:fontFamily="@font/prompt_regular"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <!-- Logout Button (Moved to top right for cleaner look) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Logout"
            android:textColor="#D32F2F"
            android:textStyle="bold"
            android:fontFamily="@font/prompt_regular"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_title" />

        <!-- Filters Section -->
        <LinearLayout
            android:id="@+id/layout_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle">

            <TextView
                android:id="@+id/label_filters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filters"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/prompt_regular"
                android:textColor="#101114"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/btn_open_filter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="+"
                android:textSize="20sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/tv_filter_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Showing filtered results"
                android:textSize="16sp"
                android:fontFamily="@font/prompt_regular"
                android:textColor="#757575"
                android:visibility="gone"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- List View with Spacing -->
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_container"
        android:layout_above="@+id/bottom_bar"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="16dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        tools:listitem="@layout/item_event" />

    <!-- Bottom Navigation Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="16dp"
        android:paddingHorizontal="24dp">

        <ImageButton
            android:id="@+id/nav_calendar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/nav_calendar"
            app:srcCompat="@drawable/ic_calendar_outline_24"
            app:tint="#FFD165"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnCamera"
            app:layout_constraintHorizontal_chainStyle="spread" />

        <ImageButton
            android:id="@+id/btnCamera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/nav_camera"
            app:srcCompat="@drawable/ic_camera_outline_24"
            app:tint="#BDBDBD"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_calendar"
            app:layout_constraintEnd_toStartOf="@id/nav_bell" />

        <ImageButton
            android:id="@+id/nav_bell"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/nav_bell"
            app:srcCompat="@drawable/ic_bell_outline_24"
            app:tint="#BDBDBD"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnCamera"
            app:layout_constraintEnd_toStartOf="@id/nav_person" />

        <ImageButton
            android:id="@+id/nav_person"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/nav_person"
            app:srcCompat="@drawable/ic_person_outline_24"
            app:tint="#BDBDBD"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/nav_bell"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>