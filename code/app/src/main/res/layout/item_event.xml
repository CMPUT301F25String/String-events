<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    android:descendantFocusability="blocksDescendants"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:strokeColor="#F0F0F0"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Cover Image -->
        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_event"
            android:contentDescription="Event Cover"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Status Badge -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Scheduled"
            android:textColor="#101114"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/prompt_regular"
            android:textAllCaps="false"
            android:clickable="false"
            android:stateListAnimator="@null"
            app:backgroundTint="#FFD165"
            app:cornerRadius="8dp"
            app:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:text="Badminton Drop In"
            android:textColor="#101114"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/prompt_regular"
            app:layout_constraintTop_toBottomOf="@id/img_cover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Time Row -->
        <ImageView
            android:id="@+id/iv_time"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/clock_icon"
            app:tint="#FFD165"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="11:00 am"
            android:textColor="#424242"
            android:textSize="14sp"
            android:fontFamily="@font/prompt_regular"
            app:layout_constraintStart_toEndOf="@id/iv_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_time"
            app:layout_constraintBottom_toBottomOf="@id/iv_time" />

        <!-- Location Row -->
        <ImageView
            android:id="@+id/iv_place_logo"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_location_logo"
            app:tint="#FFD165"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/iv_time" />

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="City Centre Community Centre"
            android:textColor="#424242"
            android:textSize="14sp"
            android:fontFamily="@font/prompt_regular"
            app:layout_constraintStart_toEndOf="@id/iv_place_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_place_logo"
            app:layout_constraintBottom_toBottomOf="@id/iv_place_logo" />

        <!-- Spots Left (Bottom Row) -->
        <TextView
            android:id="@+id/tv_spots"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="10 Spots Left"
            android:textColor="#616161"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="@font/prompt_regular"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_place" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>