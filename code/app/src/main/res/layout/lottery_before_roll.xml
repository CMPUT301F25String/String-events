<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back"
            android:src="@drawable/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lottery Draw"
            android:textColor="#111111"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBanner"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="false"
            app:strokeWidth="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/event_image" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#111111"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardBanner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/ivClock"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/clock_icon"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvEventName"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/ivClock"
            app:layout_constraintTop_toTopOf="@id/ivClock"
            app:layout_constraintBottom_toBottomOf="@id/ivClock"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/ivLoc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location_logo"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/ivClock"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/ivLoc"
            app:layout_constraintTop_toTopOf="@id/ivLoc"
            app:layout_constraintBottom_toBottomOf="@id/ivLoc"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lottery_layout_blocked_roll"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvStatusLine1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cannot roll event participants"
                    android:gravity="center"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tvStatusLine2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please wait until until the event's registration deadline has passed"
                    android:gravity="center"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tvStatusLine1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lottery_layout_before_roll"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvStatusLine1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No one has been selected yet."
                    android:textColor="#222222"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tvStatusLine2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click the roll button to roll event participants"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/tvStatusLine1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lottery_layout_after_roll"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvSelectedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/ivNotify"
                    android:layout_width="28dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/celebrate_image"
                    app:layout_constraintEnd_toStartOf="@id/tvNotified"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSelectedCount" />

                <TextView
                    android:id="@+id/tvNotified"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="They have been sent a notification!"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/ivNotify"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivNotify"
                    app:layout_constraintTop_toTopOf="@id/ivNotify" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <ImageButton
            android:id="@+id/btnRoll"
            android:layout_width="152dp"
            android:layout_height="55dp"
            android:background="@drawable/roll_button_available"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
