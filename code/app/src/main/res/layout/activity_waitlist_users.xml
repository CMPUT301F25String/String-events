<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_precise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use precise location"
            android:checked="false"
            android:layout_marginTop="8dp"/>

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/app_name"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waitlist Users"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/listWaitlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:listitem="@layout/item_user_row"
        android:dividerHeight="0dp"/>

    <Button
        android:id="@+id/btnSendWaitlist"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Send Message"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="@drawable/btn_yellow_ripple"
        android:layout_margin="16dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_open_waitlist_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View on Map"/>


</LinearLayout>
