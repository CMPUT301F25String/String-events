<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/app_name"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participating Users"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/listParticipating"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:listitem="@layout/item_user_row"
        android:dividerHeight="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <Button
            android:id="@+id/btnSendParticipating"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Send Message"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@drawable/btn_yellow_ripple"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btnExportParticipating"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Export List"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@drawable/btn_yellow_ripple"
            android:gravity="center"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btnDeleteUser"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Delete User"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@drawable/btn_yellow_ripple"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
