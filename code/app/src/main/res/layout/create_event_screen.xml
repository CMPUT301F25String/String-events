<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateEventScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/top_bar_background"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/rectangle1" />
                
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/ic_arrow_back"
                    app:layout_constraintTop_toTopOf="@id/top_bar_background"
                    app:layout_constraintBottom_toBottomOf="@id/top_bar_background"
                    app:layout_constraintStart_toStartOf="@id/top_bar_background"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Event"
                    android:textSize="20dp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/top_bar_background"
                    app:layout_constraintBottom_toBottomOf="@id/top_bar_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="20dp"
                    android:text="Event Title"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/event_title_layout"
                    app:layout_constraintStart_toStartOf="@id/event_title_layout"/>

                <EditText
                    android:id="@+id/event_title_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="17dp"
                    android:ems="15"
                    android:inputType="text"
                    android:hint="@string/add_text_hint"
                    app:layout_constraintTop_toBottomOf="@id/event_title"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_photos_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Event Photos"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/event_photos_layout"
                    app:layout_constraintStart_toStartOf="@id/event_photos_layout"/>
                
                <ImageButton
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:background="@drawable/add_photos_button"
                    app:layout_constraintTop_toBottomOf="@id/event_photos"
                    app:layout_constraintStart_toStartOf="@id/event_photos"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Event Description"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/event_description_layout"
                    app:layout_constraintStart_toStartOf="@id/event_description_layout"/>

                <EditText
                    android:id="@+id/event_description_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="17dp"
                    android:ems="15"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="6"
                    android:hint="@string/add_text_hint"
                    android:gravity="top|start"
                    app:layout_constraintTop_toBottomOf="@id/event_description"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_tags_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Event Tags"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/event_tags_layout"
                    app:layout_constraintStart_toStartOf="@id/event_tags_layout"/>

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:background="@drawable/add_tags_button"
                    app:layout_constraintTop_toBottomOf="@id/event_tags"
                    app:layout_constraintStart_toStartOf="@id/event_tags"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>