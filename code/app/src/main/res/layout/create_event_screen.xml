<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateEventScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/top_bar_background"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/rectangle1" />
                
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/ic_arrow_back"
                    app:layout_constraintTop_toTopOf="@id/top_bar_background"
                    app:layout_constraintBottom_toBottomOf="@id/top_bar_background"
                    app:layout_constraintStart_toStartOf="@id/top_bar_background"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Event"
                    android:textSize="20dp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/top_bar_background"
                    app:layout_constraintBottom_toBottomOf="@id/top_bar_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:text="Event Title"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/event_title_layout"
                    app:layout_constraintStart_toStartOf="@id/event_title_layout"/>

                <EditText
                    android:id="@+id/event_title_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="17dp"
                    android:ems="15"
                    android:inputType="text"
                    android:hint="@string/add_text_hint"
                    app:layout_constraintTop_toBottomOf="@id/event_title"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_photos_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Event Photos"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/event_photos_layout"
                    app:layout_constraintStart_toStartOf="@id/event_photos_layout"/>
                
                <ImageButton
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:background="@drawable/add_photos_button"
                    app:layout_constraintTop_toBottomOf="@id/event_photos"
                    app:layout_constraintStart_toStartOf="@id/event_photos"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Event Description"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/event_description_layout"
                    app:layout_constraintStart_toStartOf="@id/event_description_layout"/>

                <EditText
                    android:id="@+id/event_description_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="17dp"
                    android:ems="15"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="6"
                    android:hint="@string/add_text_hint"
                    android:gravity="top|start"
                    app:layout_constraintTop_toBottomOf="@id/event_description"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_tags_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Event Tags"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/event_tags_layout"
                    app:layout_constraintStart_toStartOf="@id/event_tags_layout"/>

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:background="@drawable/add_tags_button"
                    app:layout_constraintTop_toBottomOf="@id/event_tags"
                    app:layout_constraintStart_toStartOf="@id/event_tags"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_start_datetime_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_start_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Event Start Date and Time"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/event_start_datetime_layout"
                    app:layout_constraintStart_toStartOf="@id/event_start_datetime_layout"/>

                <EditText
                    android:id="@+id/event_start_date_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="7"
                    android:inputType="datetime"
                    android:hint="Enter start date"
                    android:clickable="false"
                    app:layout_constraintTop_toBottomOf="@id/event_start_datetime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/event_start_time_editText"/>

                <EditText
                    android:id="@+id/event_start_time_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="7"
                    android:inputType="datetime"
                    android:hint="Enter start time"
                    android:clickable="false"
                    app:layout_constraintTop_toBottomOf="@id/event_start_datetime"
                    app:layout_constraintStart_toEndOf="@id/event_start_date_editText"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_end_datetime_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_end_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Event End Date and Time"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/event_end_datetime_layout"
                    app:layout_constraintStart_toStartOf="@id/event_end_datetime_layout"/>

                <EditText
                    android:id="@+id/event_end_date_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="7"
                    android:inputType="datetime"
                    android:hint="Enter end date"
                    android:clickable="false"
                    app:layout_constraintTop_toBottomOf="@id/event_end_datetime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/event_end_time_editText"/>

                <EditText
                    android:id="@+id/event_end_time_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="7"
                    android:inputType="datetime"
                    android:hint="Enter end time"
                    android:clickable="false"
                    app:layout_constraintTop_toBottomOf="@id/event_end_datetime"
                    app:layout_constraintStart_toEndOf="@id/event_end_date_editText"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Event Location"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/event_location_layout"
                    app:layout_constraintStart_toStartOf="@id/event_location_layout"/>

                <EditText
                    android:id="@+id/event_location_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="17dp"
                    android:ems="15"
                    android:inputType="text"
                    android:hint="@string/add_text_hint"
                    app:layout_constraintTop_toBottomOf="@id/event_location"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/registration_start_datetime_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/registration_start_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Registration Start Date and Time"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/registration_start_datetime_layout"
                    app:layout_constraintStart_toStartOf="@id/registration_start_datetime_layout"/>

                <EditText
                    android:id="@+id/registration_start_date_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="7"
                    android:inputType="datetime"
                    android:hint="Enter start date"
                    android:clickable="false"
                    app:layout_constraintTop_toBottomOf="@id/registration_start_datetime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/registration_start_time_editText"/>

                <EditText
                    android:id="@+id/registration_start_time_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="7"
                    android:inputType="datetime"
                    android:hint="Enter start time"
                    android:clickable="false"
                    app:layout_constraintTop_toBottomOf="@id/registration_start_datetime"
                    app:layout_constraintStart_toEndOf="@id/registration_start_date_editText"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/registration_end_datetime_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/registration_end_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Registration End Date and Time"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/registration_end_datetime_layout"
                    app:layout_constraintStart_toStartOf="@id/registration_end_datetime_layout"/>

                <EditText
                    android:id="@+id/registration_end_date_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="7"
                    android:inputType="datetime"
                    android:hint="Enter end date"
                    android:clickable="false"
                    app:layout_constraintTop_toBottomOf="@id/registration_end_datetime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/registration_end_time_editText"/>

                <EditText
                    android:id="@+id/registration_end_time_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:ems="7"
                    android:inputType="datetime"
                    android:hint="Enter end time"
                    android:clickable="false"
                    app:layout_constraintTop_toBottomOf="@id/registration_end_datetime"
                    app:layout_constraintStart_toEndOf="@id/registration_end_date_editText"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_attendants_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_attendants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Number of Attendants"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/event_attendants_layout"
                    app:layout_constraintStart_toStartOf="@id/event_attendants_layout"/>

                <EditText
                    android:id="@+id/event_attendants_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="17dp"
                    android:ems="15"
                    android:inputType="number"
                    android:hint="Optional (default is unlimited)"
                    app:layout_constraintTop_toBottomOf="@id/event_attendants"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_waitlist_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_waitlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Waitlist Limit"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/event_waitlist_layout"
                    app:layout_constraintStart_toStartOf="@id/event_waitlist_layout"/>

                <EditText
                    android:id="@+id/event_waitlist_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="17dp"
                    android:ems="15"
                    android:inputType="number"
                    android:hint="Optional (default is unlimited)"
                    app:layout_constraintTop_toBottomOf="@id/event_waitlist"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_geolocation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/geolocation_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:thumbTint="@color/white"
                    app:trackTint="@color/yellow"
                    app:switchMinWidth="45dp"
                    app:layout_constraintTop_toTopOf="@id/event_geolocation_layout"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/geolocation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Geolocation Requirement for Users"
                    android:textSize="15sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/geolocation_switch"
                    app:layout_constraintBottom_toBottomOf="@id/geolocation_switch"
                    app:layout_constraintStart_toEndOf="@id/geolocation_switch"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/event_visibility_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp">

                <TextView
                    android:id="@+id/event_visibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Event Visibility"
                    android:textSize="20sp"
                    android:fontFamily="@font/prompt_regular"
                    app:layout_constraintTop_toTopOf="@id/event_visibility_layout"
                    app:layout_constraintStart_toStartOf="@id/event_visibility_layout"/>
                
                <ImageButton
                    android:id="@+id/event_public_button"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/event_visibility"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/event_private_button"
                    android:background="@drawable/public_button"/>

                <ImageButton
                    android:id="@+id/event_private_button"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="@id/event_public_button"
                    app:layout_constraintStart_toEndOf="@id/event_public_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/private_button"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/done_button"
            android:layout_width="300dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/done_button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>