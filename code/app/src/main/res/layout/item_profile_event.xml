<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp">

    <ImageView
        android:id="@+id/profile_background"
        android:layout_width="160dp"
        android:layout_height="230dp"
        android:background="@drawable/rounded_rectangle1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="141dp"
        android:layout_height="94dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/event_image"
        app:layout_constraintStart_toStartOf="@id/profile_background"
        app:layout_constraintEnd_toEndOf="@id/profile_background"
        app:layout_constraintTop_toTopOf="@id/profile_background"/>

    <TextView
        android:id="@+id/event_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Event Name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@id/profile_background"
        app:layout_constraintEnd_toEndOf="@id/profile_background"
        app:layout_constraintTop_toBottomOf="@id/event_image"/>

    <ImageView
        android:id="@+id/date_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/date"
        app:layout_constraintStart_toStartOf="@id/profile_background"
        app:layout_constraintTop_toBottomOf="@id/event_name"/>

    <TextView
        android:id="@+id/event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon, Oct 8, 2025"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/date_image"
        app:layout_constraintEnd_toEndOf="@id/profile_background"
        app:layout_constraintTop_toTopOf="@id/date_image"/>

    <TextView
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:00 AM - 1:00 PM"
        android:textSize="11sp"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@id/date_image"
        app:layout_constraintEnd_toEndOf="@id/profile_background"
        app:layout_constraintTop_toBottomOf="@id/event_date"/>

    <ImageView
        android:id="@+id/community_centre_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/community_centre_image"
        app:layout_constraintStart_toStartOf="@id/profile_background"
        app:layout_constraintTop_toBottomOf="@id/date_image"/>

    <TextView
        android:id="@+id/event_location"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:text="City Centre Community Centre "
        android:textSize="11sp"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@id/community_centre_image"
        app:layout_constraintEnd_toEndOf="@id/profile_background"
        app:layout_constraintTop_toTopOf="@id/community_centre_image"
        app:layout_constraintBottom_toBottomOf="@id/community_centre_image"/>


</androidx.constraintlayout.widget.ConstraintLayout>