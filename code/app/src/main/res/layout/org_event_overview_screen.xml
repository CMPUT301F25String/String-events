<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top bar -->
    <TextView
        android:id="@+id/tvTitleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/prompt_regular"
        android:text="Event"
        android:textColor="#222222"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back_button"
        android:contentDescription="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toTopOf="@id/btnCancelEvent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgEventCover"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:background="@android:color/darker_gray"
                        android:contentDescription="@string/event_image"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/tvEventName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Name"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222222"
                        android:fontFamily="@font/prompt_regular"
                        android:layout_marginBottom="6dp"/>

                    <!-- Time range -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/clock_icon"
                            android:contentDescription="@string/time"/>

                        <TextView
                            android:id="@+id/tvEventTimeRange"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2000-00-00 00:00 - 2000-00-00 01:00"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:fontFamily="@font/prompt_regular"/>
                    </LinearLayout>

                    <!-- Location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/community_centre_image"
               />

                        <TextView
                            android:id="@+id/tvEventLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="City Centre Community Centre"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:fontFamily="@font/prompt_regular"/>
                    </LinearLayout>

                    <!-- Registration and counts (no grey box) -->
                    <LinearLayout
                        android:id="@+id/layoutRegInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp">

                        <!-- Registration start -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:id="@+id/tvRegStartLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registration Start"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:fontFamily="@font/prompt_regular"/>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/clock_icon"/>

                            <TextView
                                android:id="@+id/tvRegStart"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2000-00-00 00:00"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:fontFamily="@font/prompt_regular"/>
                        </LinearLayout>

                        <!-- Registration end -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:id="@+id/tvRegEndLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registration End"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:fontFamily="@font/prompt_regular"/>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/clock_icon"/>

                            <TextView
                                android:id="@+id/tvRegEnd"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2000-00-00 00:00"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:fontFamily="@font/prompt_regular"/>
                        </LinearLayout>

                        <!-- Waitlist limit -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:id="@+id/tvWaitlistLimitLabel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Waitlist Limit"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:fontFamily="@font/prompt_regular"/>

                            <TextView
                                android:id="@+id/tvWaitlistLimit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:fontFamily="@font/prompt_regular"/>
                        </LinearLayout>

                        <!-- Number of attendees -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvAttendeesLabel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Number of Attendees"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:fontFamily="@font/prompt_regular"/>

                            <TextView
                                android:id="@+id/tvAttendees"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200"
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:fontFamily="@font/prompt_regular"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Tags -->
                    <LinearLayout
                        android:id="@+id/layoutTags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/tvTag1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fitness"
                            android:paddingHorizontal="18dp"
                            android:paddingVertical="6dp"
                            android:background="#FFEFEFEF"
                            android:textColor="#222222"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="@font/prompt_regular"/>

                        <TextView
                            android:id="@+id/tvTag2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Games"
                            android:paddingHorizontal="18dp"
                            android:paddingVertical="6dp"
                            android:background="#FFEFEFEF"
                            android:textColor="#222222"
                            android:textSize="14sp"
                            android:fontFamily="@font/prompt_regular"/>
                    </LinearLayout>

                    <!-- Description -->
                    <TextView
                        android:id="@+id/tvDescriptionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description:"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:fontFamily="@font/prompt_regular"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:fontFamily="@font/prompt_regular"
                        android:lineSpacingExtra="2dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Helper text -->
            <TextView
                android:id="@+id/tvShareInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share the link or QR code below. Entrants will open the event page to view details and join the waitlist."
                android:textSize="14sp"
                android:textColor="#333333"
                android:fontFamily="@font/prompt_regular"
                android:layout_marginBottom="12dp"/>

            <!-- Buttons row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditEvent"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Edit Event"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:backgroundTint="#FFEFCF70"
                    android:fontFamily="@font/prompt_regular"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEventDetails"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Event Details"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:backgroundTint="#FFEFCF70"
                    android:fontFamily="@font/prompt_regular"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Buttons row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnQrCode"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="QR Code"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:backgroundTint="#FFEFCF70"
                    android:fontFamily="@font/prompt_regular"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEventLink"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Event Link"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:backgroundTint="#FFEFCF70"
                    android:fontFamily="@font/prompt_regular"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Cancel event image button -->
    <ImageButton
        android:id="@+id/btnCancelEvent"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/cancelevent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
